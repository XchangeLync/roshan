@{
    ViewBag.Header = "Product Catalogue";
}

<div class="container-fluid no-gap" ng-app="GMartApp" ng-controller="productController">
    <h3 class="pageHeader text-center"><u>{{pageHeader}}</u></h3>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td colspan="5">
                        <input type="button" class="btn-sm btn-success" value="Add Product" ng-click="addProduct()" />
                    </td>
                    <td colspan="2">
                        <input type="search" id="search" class="form-control" ng-model="search">
                    </td>
                </tr>
                <tr>
                    <th>Product Code</th>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Active</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr data-ng-repeat="product in products | filter: search">
                    <td>{{product.Code}}</td>
                    <td>{{product.Type}}</td>
                    <td>{{product.Name}}</td>
                    <td>{{product.Price}}</td>
                    <td>{{product.Quantity}}</td>
                    <td class="text-center">
                        <span data-ng-class='({{product.IsActive}}===true ? "glyphicon glyphicon-ok" : "glyphicon glyphicon-remove")'></span>
                    </td>
                    <td class="text-center">
                        <a href="javascript:void(0)" ng-click="editProduct(product.Code)"><span class="glyphicon glyphicon-edit"></span></a> &nbsp;&nbsp;
                        <a href="javascript:void(0)" ng-click="deleteProduct(product.Code)"><span class="glyphicon glyphicon-remove"></span></a>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                
            </tfoot>
        </table>
    </div>

    <div>{{error}}</div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/angularJS")
<script src="~/Scripts/GM/module.js"></script>
<script src="~/Scripts/GM/productController.js"></script>
<script src="~/Scripts/GM/service.js"></script>